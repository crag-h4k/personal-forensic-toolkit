#systemd shortcuts
alias "rn"="systemctl reboot now"
alias "sys-st"="systemctl status"
alias "sys-sp"="systemctl stop"
alias "sys-sr"="systemctl start"
alias "sys-r"="systemctl restart"
alias "sys-e"="systemctl enable"
alias "sys-d"="systemctl disable"
alias "running"="systemctl list-units --state=running"
alias "active"="systemctl list-units --state=active"
alias "active"="systemctl list-unit-files --state=enabled"
alias "failed"="systemctl list-units --state=failed --all"
