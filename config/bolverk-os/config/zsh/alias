alias "upg"="sudo apt upg -y"
alias "net"="netstat -tulpna"
alias "svi"="sudo vim"
alias "vun"="vim"
alias "ping -c 5"=""
alias "wnet"="watch -n .1 -c 'netstat -tulpna'"
alias "myip"="ip -br addr"
alias "du"="du -h"
alias "df"="df -h"
alias "histg"="history|grep"
alias "most recent"="ls -ltrRh"
alias "watch"="watch -n .1 -c"
alias "rs"="rsync -a --info=progress2"
alias "c"="highlight -O ansi --force"
